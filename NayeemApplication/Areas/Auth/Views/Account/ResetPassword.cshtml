@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Areas/Auth/Views/Shared/_AuthLayout.cshtml";
}
@section Style{ 
    <style>
        a {
            text-decoration: none;
        }
        .pageShape {
            width: 100%;
            height: 100vh;
            display: inline-block;
            display: flex;
            align-items: center;
            margin-top:50px!important
        }
    </style>
}

<div class="pageShape bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 offset-lg-1">
                <div class="bg-white shadow rounded">
                    <div class="row">
                        <div class="col-md-7 pe-0">
                            <div class="form-left h-100 py-5 px-5 pb-5">
                                <div class="text-center">
                                    <h3>Reset password Info</h3>
                                </div>
                                <form asp-area="Auth" asp-controller="Account" asp-action="ResetPassword" method="post" class="form-horizontal">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <input class="form-control form-control-lg bg-active-warning" type="hidden" asp-for="Code" />
                                    <div class="fv-row mb-10">
                                        <!--begin::Label-->
                                        <label class="form-label fs-6 fw-bolder text-dark" asp-for="Email">Email</label>
                                        <!--end::Label-->
                                        <!--begin::Input-->
                                        <input class="form-control form-control-lg form-control-solid" asp-for="Email" id="Email" autocomplete="off" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                        <!--end::Input-->
                                    </div>

                                    <div class="fv-row mb-10">
                                        <!--begin::Label-->
                                        <label class="form-label fs-6 fw-bolder text-dark" asp-for="Password">Password</label>
                                        <!--end::Label-->
                                        <!--begin::Input-->
                                        <input class="form-control form-control-lg form-control-solid" asp-for="Password" id="Password" autocomplete="off" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                        <!--end::Input-->
                                    </div>

                                    <div class="fv-row mb-10">
                                        <!--begin::Label-->
                                        <label class="form-label fs-6 fw-bolder text-dark" asp-for="ConfirmPassword">ConfirmPassword</label>
                                        <!--end::Label-->
                                        <!--begin::Input-->
                                        <input class="form-control form-control-lg form-control-solid" asp-for="ConfirmPassword" id="ConfirmPassword" autocomplete="off" />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        <!--end::Input-->
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <button type="submit" class="btn btn-success">Reset</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="col-md-5 ps-0 d-none d-md-block">
                            <div class="form-right h-100 bg-primary text-white text-center pt-5">
                                <h2 class="fs-1 text-white">Ingen Studio Limited</h2>
                                <br />
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
