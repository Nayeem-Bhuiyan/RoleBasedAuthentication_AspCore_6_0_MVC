@model SendCodeViewModel
@{
    ViewData["Title"] = "SendCode";
    Layout = "~/Areas/Auth/Views/Shared/_AuthLayout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 border p-4 shadow bg-light">
            <div class="col-12">
                <h3 class="fw-normal  fs-4 text-uppercase mb-4"></h3>
            </div>
            <form asp-area="Auth" asp-controller="Account" asp-action="SendCode" asp-route-returnurl="@Model.ReturnUrl" method="post">
                <input asp-for="RememberMe" type="hidden" />
                <div class="row g-3">
                    <div class="col-12">
                        @*<select class="form-select" asp-for="SelectedProvider" asp-items="Model.Providers"></select>*@
                        <input type="hidden" asp-for="SelectedProvider" asp-items="Model.Providers" value="Email" />
                        <input type="email" name="Email" id="Email" class="form-control" value="" placeholder="Enter Email" required/>
                    </div>
                    <div class="col-12 mt-5">
                        <button type="submit" class="btn btn-primary float-end">SendCode</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}


